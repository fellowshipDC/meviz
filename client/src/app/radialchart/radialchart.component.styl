svg 
  margin: 0px auto;
  display: block;
  background-color: white
  path.arc 
    opacity: 0.9;
    transition: opacity 0.5s;
    background-color: white
  path.arc:hover 
    opacity: 0.7;
  .axis line, .axis circle  
    stroke: #cccccc;
    stroke-width: 1px
  .axis circle 
    fill: none;
  .r.axis text 
    text-anchor: end
  .tooltip 
    position: absolute;
    display: none;
    background: rgba(0, 0, 0, 0.6);
    opacity: 1;
    border-radius: 3px;
    box-shadow: -3px 3px 15px #888;
    color: white;
    padding: 6px;
